<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:rowCount="4">


        <ImageView
            android:id="@+id/cartavirada"
            android:layout_width="140dp"
            android:layout_height="138dp"
            android:layout_row="1"
            android:layout_column="1"
            tools:srcCompat="@drawable/cartadecosta" />

        <ImageView
            android:id="@+id/cartavirada4"
            android:layout_width="140dp"
            android:layout_height="138dp"
            android:layout_row="0"
            android:layout_column="2"
            tools:srcCompat="@drawable/cartadecosta" />

        <ImageView
            android:id="@+id/cartavirada5"
            android:layout_width="140dp"
            android:layout_height="138dp"
            android:layout_row="0"
            android:layout_column="3"
            tools:srcCompat="@drawable/cartadecosta" />

        <ImageView
            android:id="@+id/cartavirada6"
            android:layout_width="140dp"
            android:layout_height="138dp"
            android:layout_row="1"
            android:layout_column="2"
            tools:srcCompat="@drawable/cartadecosta" />

        <ImageView
            android:id="@+id/cartavirada7"
            android:layout_width="140dp"
            android:layout_height="138dp"
            android:layout_row="2"
            android:layout_column="2"
            tools:srcCompat="@drawable/cartadecosta" />

        <ImageView
            android:id="@+id/cartavirada2"
            android:layout_width="140dp"
            android:layout_height="138dp"
            android:layout_row="2"
            android:layout_column="1"
            tools:srcCompat="@drawable/cartadecosta" />

        <ImageView
            android:id="@+id/cartavirada3"
            android:layout_width="140dp"
            android:layout_height="138dp"
            android:layout_row="0"
            android:layout_column="1"
            tools:srcCompat="@drawable/cartadecosta" />

        <ImageView
            android:id="@+id/cartavirada9"
            android:layout_width="140dp"
            android:layout_height="138dp"
            android:layout_row="1"
            android:layout_column="3"
            tools:srcCompat="@drawable/cartadecosta" />

        <ImageView
            android:id="@+id/cartavirada10"
            android:layout_width="140dp"
            android:layout_height="138dp"
            android:layout_row="2"
            android:layout_column="3"
            tools:srcCompat="@drawable/cartadecosta" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="2"
            android:text="Button" />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>